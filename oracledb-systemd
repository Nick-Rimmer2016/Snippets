sudo nano /etc/systemd/system/oracledb.service

[Unit]
Description=Oracle Database Service

[Service]
# Replace 'oracle' with the username of the Oracle DB owner
User=oracle
# Replace '/home/oracle' with the home directory of the Oracle DB owner
WorkingDirectory=/home/oracle
# Replace 'ORACLE_SID' with the SID of your Oracle DB
Environment="ORACLE_SID=ORACLE_SID"
# Replace '/u01/app/oracle/product/12.2.0/dbhome_1' with the path to your Oracle home directory
Environment="ORACLE_HOME=/u01/app/oracle/product/12.2.0/dbhome_1"
ExecStart=/u01/app/oracle/product/12.2.0/dbhome_1/bin/dbstart
ExecStop=/u01/app/oracle/product/12.2.0/dbhome_1/bin/dbshut
Type=forking

[Install]
WantedBy=multi-user.target

sudo systemctl daemon-reload
sudo systemctl enable oracledb
sudo systemctl start oracledb
sudo systemctl status oracledb
